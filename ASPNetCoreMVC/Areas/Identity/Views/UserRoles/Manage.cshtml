@using ASPNetCoreMVC.Areas.Identity.Models
@model List<ManageUserRolesViewModel>
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using(Html.BeginForm("Manage", "UserRoles", FormMethod.Post)){
    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2>
            Add/Remove Roles for User / @ViewBag.UserName.
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    @Html.HiddenFor(model => @Model[i].UserId)
                    @Html.HiddenFor(model => @Model[i].RoleId)
                    @Html.HiddenFor(model => @Model[i].RoleName)
                    @Html.CheckBoxFor(model => @Model[i].Selected)
                    @Html.Label("RoleName", @Model[i].RoleName)
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            <a asp-action="EditUser" asp-route-id="@ViewBag.userId" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
}